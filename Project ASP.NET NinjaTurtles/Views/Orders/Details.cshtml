@model Project_ASP.NET_NinjaTurtles.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
    </dl>
    <br />
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.CustomerName)
        </dt>
        <dd class="col-sm-10"> @((ViewBag.Customer as List<Customer>).First().CustomerName)</dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.CustomerPhone)
        </dt>
        <dd class="col-sm-10"> @((ViewBag.Customer as List<Customer>).First().CustomerPhone)</dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.CustomerEmail)
        </dt>
        <dd class="col-sm-10"> @((ViewBag.Customer as List<Customer>).First().CustomerEmail)</dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.CustomerAddress)
        </dt>
        <dd class="col-sm-10"> @((ViewBag.Customer as List<Customer>).First().CustomerAddress)</dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.CustomerZipCode)
        <dd class="col-sm-10"> @((ViewBag.Customer as List<Customer>).First().CustomerZipCode)</dd>
        </dt>
    </dl>
    <br />
    <h4>Products</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </dt>
        <dd class="col-sm-10">
            @((ViewBag.Product as List<Product>).First().ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProductPrice)
        </dt>
        <dd class="col-sm-10">
            @((ViewBag.Product as List<Product>).First().ProductPrice)
        </dd>

</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
